# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:6432/postgres

# Application Settings
API_TITLE=Shortify API
API_DESCRIPTION=URL Shortener Service
API_VERSION=1.0.0

# CORS Settings (replace with your domain in production)
